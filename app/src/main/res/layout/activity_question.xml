<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TabHost
        android:id="@+id/tabquestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle1"
                android:orientation="horizontal"

                />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="Numero de la Question:"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <EditText
                        android:id="@+id/editTextNumQM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rectangle"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="13dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="13dp"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/textView43"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="Question :"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <EditText
                        android:id="@+id/editTextDescQM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rectangle"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="13dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="13dp"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/textView412"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="Numero du pile :"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <EditText
                        android:id="@+id/editTextNumPileQuM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rectangle"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="13dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="13dp"
                        android:textSize="14dp"/>

                    <Button
                        android:id="@+id/buttonMod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button1"
                        android:elevation="0dp"
                        android:onClick="modifierQuestion"
                        android:text="Modifier"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <Button
                        android:id="@+id/buttonCher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/button1"
                        android:elevation="0dp"
                        android:onClick="ChercherQuestion"
                        android:text="Chercher"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="Numero du Question:"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <EditText
                        android:id="@+id/editTextNumQ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rectangle"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="13dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="13dp"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="Question :"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <EditText
                        android:id="@+id/editTextDescQ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rectangle"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="13dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="13dp"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/textView41"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="Numero du Pile :"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <Spinner
                        android:id="@+id/s1q"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rectangle"
                        android:paddingBottom="13dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="13dp"
                        android:textSize="14dp"
                        ></Spinner>

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button1"
                        android:elevation="0dp"
                        android:onClick="insertQuestion"
                        android:text="Ajouter une Question"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center|bottom"
                        android:text="Exam android"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/textView3C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:gravity="top|center"
                        android:paddingTop="0dp"
                        android:text="&#169; 2017"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/lvQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>


            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>
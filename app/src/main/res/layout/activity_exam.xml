<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/th3"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rectangle1"

                />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewCC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Numero du Exam:"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="3dp"/>

                    <EditText
                        android:id="@+id/editTextNumExamModif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/rectangle"
                        android:paddingLeft="30dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:inputType="textEmailAddress"/>

                    <TextView
                        android:id="@+id/textView4dd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="3dp"
                        android:text="Date exam :"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <EditText
                        android:id="@+id/editTextDateExamModif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/rectangle"
                        android:paddingLeft="30dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:inputType="textEmailAddress"/>
                    <TextView
                        android:id="@+id/textView4Axx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="3dp"
                        android:text="Duree de l'exam :"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <EditText
                        android:id="@+id/editTextDureeExamModif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/rectangle"
                        android:paddingLeft="30dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:inputType="textEmailAddress"/>
                    <TextView
                        android:id="@+id/textView41ccx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="3dp"
                        android:text="Numero du Pile :"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>



                    <EditText
                        android:id="@+id/editTextNumExamPile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/rectangle"
                        android:paddingLeft="30dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:inputType="textEmailAddress"/>

                    <Button
                        android:id="@+id/buttonMod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button1"
                        android:elevation="0dp"
                        android:onClick="modifierExam"
                        android:text="Modifier"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <Button
                        android:id="@+id/buttonCher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chercher"
                        android:textColor="@color/white"
                        android:layout_marginBottom="12dp"
                        android:elevation="0dp"
                        android:background="@drawable/button1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:onClick="ChercherExam"
                        android:textSize="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Numero du Exam:"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:layout_margin="12dp"/>

                    <EditText
                        android:id="@+id/editTextNumExam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/rectangle"
                        android:paddingLeft="30dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:inputType="textEmailAddress"/>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="Date exam :"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <EditText
                        android:id="@+id/editTextDateExam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/rectangle"
                        android:paddingLeft="30dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:inputType="textEmailAddress"/>
                    <TextView
                        android:id="@+id/textView4A"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="Duree de l'exam :"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <EditText
                        android:id="@+id/editTextDureeExam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/rectangle"
                        android:paddingLeft="30dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:inputType="textEmailAddress"/>
                    <TextView
                        android:id="@+id/textView41"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="Numero du module :"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <Spinner
                        android:id="@+id/spinnerExamPile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                        android:textSize="14dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        ></Spinner>

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ajouter un Exam"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="12dp"
                        android:elevation="0dp"
                        android:background="@drawable/button1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:onClick="insertExam"
                        android:textSize="15dp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ListView
                        android:id="@+id/lvExam"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>


            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>
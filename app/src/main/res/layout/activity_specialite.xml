<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TabHost
        android:id="@+id/th2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle1"
                android:orientation="horizontal"

                />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/tab2S"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewNum1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="Num :"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <EditText
                        android:id="@+id/editTextNumSpec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rectangle"
                        android:paddingBottom="13dp"
                        android:paddingTop="13dp"
                        android:paddingLeft="30dp"
                        android:textSize="14dp"
                        android:inputType="textEmailAddress"/>

                    <TextView
                        android:id="@+id/textViewNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="Nom :"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <EditText
                        android:id="@+id/editTextNomSpec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rectangle"
                        android:paddingBottom="13dp"
                        android:paddingTop="13dp"
                        android:paddingLeft="30dp"
                        android:textSize="14dp"
                        android:inputType="textEmailAddress"/>

                    <Button
                        android:id="@+id/buttonMod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="60dp"
                        android:background="@drawable/button1"
                        android:elevation="0dp"
                        android:onClick="modifierSpec"
                        android:text="Modifier"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <Button
                        android:id="@+id/buttonCher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/button1"
                        android:elevation="0dp"
                        android:onClick="ChercherSpec"
                        android:text="Chercher"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center|bottom"
                        android:text="Exam android"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/textView3C3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:gravity="top|center"
                        android:paddingTop="0dp"
                        android:text="&#169; 2017"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab1S"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="Num :"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <EditText
                        android:id="@+id/editTextNSpec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rectangle"
                        android:paddingBottom="13dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="13dp"
                        android:textSize="14dp"
                        android:inputType="textEmailAddress"/>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="Nom :"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <EditText
                        android:id="@+id/editTextNmSpec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rectangle"
                        android:paddingBottom="13dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="13dp"
                        android:textSize="14dp"
                        android:inputType="textEmailAddress"/>

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="60dp"
                        android:background="@drawable/button1"
                        android:elevation="0dp"
                        android:onClick="insertSpec"
                        android:text="Ajouter"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center|bottom"
                        android:text="Exam android"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/textView3C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:gravity="top|center"
                        android:paddingTop="0dp"
                        android:text="&#169; 2017"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3S"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ListView
                        android:id="@+id/lvspec"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>




            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>